<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Hệ thống' %> - Hệ thống quản lý học sinh</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- jQuery (cần thiết cho Bootstrap và DataTables) -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <!-- Bootstrap Bundle JS (bao gồm Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 48px 0 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }
        
        .sidebar-sticky {
            height: calc(100vh - 48px);
            overflow-x: hidden;
            overflow-y: auto;
        }
        
        @media (max-width: 767.98px) {
            .sidebar {
                position: static;
                height: auto;
                padding-top: 0;
            }
            
            main {
                margin-left: 0 !important;
            }
        }
        
        main {
            margin-left: 16.666667%;
        }
    </style>
</head>
<body>
    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="/">
            <i class="bi bi-book me-2"></i> QLHS
        </a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="w-100 d-none d-md-block"></div>
        
        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
                <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
                <div class="dropdown position-relative">
                    <a class="nav-link dropdown-toggle px-3" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle me-1"></i>
                        <% if (typeof user !== 'undefined') { %>
                            <% if (typeof userType !== 'undefined' && userType === 'teacher') { %>
                                <%= user.name || 'Giáo viên' %>
                            <% } else { %>
                                <%= user.username || 'Admin' %>
                            <% } %>
                        <% } else { %>
                            Người dùng
                        <% } %>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end position-absolute" aria-labelledby="userDropdown" style="z-index: 1030;">
                        <li><a class="dropdown-item" href="/settings/account"><i class="bi bi-gear me-2"></i>Cài đặt tài khoản</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/auth/logout"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                    </ul>
                </div>
                <% } else { %>
                <a class="nav-link px-3" href="/auth/login">Đăng nhập</a>
                <% } %>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <% if (typeof userType !== 'undefined') { %>
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="sidebar-sticky pt-3">
                    <ul class="nav flex-column">
                        <% if (userType === 'teacher') { %>
                        <!-- Menu cho giáo viên -->
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Dashboard')) { %>active<% } %>" href="/teacher/dashboard">
                                <i class="bi bi-speedometer2 me-2"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Lớp Học')) { %>active<% } %>" href="/teacher/classes">
                                <i class="bi bi-people me-2"></i>
                                Lớp học
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Học Sinh')) { %>active<% } %>" href="/teacher/students">
                                <i class="bi bi-mortarboard me-2"></i>
                                Học sinh
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Phụ Huynh')) { %>active<% } %>" href="/teacher/parents">
                                <i class="bi bi-people-fill me-2"></i>
                                Phụ huynh
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Học Phí')) { %>active<% } %>" href="/teacher/tuition">
                                <i class="bi bi-cash-stack me-2"></i>
                                Học phí
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Cài Đặt')) { %>active<% } %>" href="/settings/account">
                                <i class="bi bi-gear me-2"></i>
                                Cài đặt
                            </a>
                        </li>
                        <% } else { %>
                        <!-- Menu cho admin -->
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Dashboard')) { %>active<% } %>" href="/dashboard">
                                <i class="bi bi-speedometer2 me-2"></i>
                                Dashboard
                            </a>
                        </li>
                        
                        <li class="nav-header mt-3 py-2 text-muted small text-uppercase px-3">Học thuật</li>
                        
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Lịch Học')) { %>active<% } %>" href="/academic/schedule">
                                <i class="bi bi-calendar-date me-2"></i>
                                Lịch học
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Học Sinh')) { %>active<% } %>" href="/academic/students">
                                <i class="bi bi-mortarboard me-2"></i>
                                Học sinh
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Phụ Huynh')) { %>active<% } %>" href="/academic/parents">
                                <i class="bi bi-people me-2"></i>
                                Phụ huynh
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Điểm Danh')) { %>active<% } %>" href="/academic/attendance">
                                <i class="bi bi-calendar-check me-2"></i>
                                Điểm danh
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Học Phí')) { %>active<% } %>" href="/academic/tuition">
                                <i class="bi bi-cash-stack me-2"></i>
                                Học phí
                            </a>
                        </li>
                        
                        <li class="nav-header mt-3 py-2 text-muted small text-uppercase px-3">Quản lý</li>
                        
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Giáo Viên')) { %>active<% } %>" href="/administrative/teachers">
                                <i class="bi bi-person-badge me-2"></i>
                                Giáo viên
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link <% if (typeof title !== 'undefined' && title.includes('Cài Đặt')) { %>active<% } %>" href="/settings/account">
                                <i class="bi bi-gear me-2"></i>
                                Cài đặt
                            </a>
                        </li>
                        <% } %>
                    </ul>
                </div>
            </nav>
            <% } %>

            <main class="<% if (typeof userType !== 'undefined') { %>col-md-9 col-lg-10 ms-auto<% } else { %>container<% } %> px-md-4 py-4">
                <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
                <% } %>
                
                <% if (typeof success !== 'undefined' && success && success.length > 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
                <% } %>