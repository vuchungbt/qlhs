<%- include('../partials/header') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0">Danh Sách Lớp Dạy</h1>
                <div>
                    <a href="/teacher/dashboard" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left me-1"></i> Quay Lại Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-transparent py-3 border-bottom-0">
                    <h5 class="mb-0">Lớp Học Của Tôi</h5>
                </div>
                <div class="card-body">
                    <% if (classes && classes.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="font-weight: 500">Tên Lớp</th>
                                        <th style="font-weight: 500">Lịch Học</th>
                                        <th style="font-weight: 500">Thời Gian</th>
                                        <th style="font-weight: 500">Số Học Sinh</th>
                                        <th style="font-weight: 500">Điểm Danh Gần Nhất</th>
                                        <th style="font-weight: 500">Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% classes.forEach(function(cls) { %>
                                        <tr>
                                            <td class="fw-medium"><%= cls.className %></td>
                                            <td><%= cls.scheduleDisplay %></td>
                                            <td><%= cls.timeDisplay %></td>
                                            <td>
                                                <span class="badge bg-info rounded-pill"><%= cls.studentCount %></span>
                                            </td>
                                            <td>
                                                <% if (cls.lastAttendance && cls.lastAttendance !== 'Chưa có') { %>
                                                    <span class="badge bg-success rounded-pill"><%= cls.lastAttendance %></span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary rounded-pill">Chưa có</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="/teacher/classes/<%= cls._id %>" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> Chi Tiết
                                                    </a>
                                                    <a href="/teacher/attendance/take/<%= cls._id %>" class="btn btn-sm btn-outline-success">
                                                        <i class="bi bi-check2-square"></i> Điểm Danh
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i> Bạn chưa được phân công lớp nào. Vui lòng liên hệ quản trị viên.
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 